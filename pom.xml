            <!--<goal>checkstyle</goal>-->
            <!--</goals>-->
            <!--</execution>-->
            <!--</executions>-->
            <!--</plugin>-->
        </plugins>
    </build>
    <distributionManagement>
        <repository>
            <id>360live-artifactory</id>
            <name>UP_ZPHO_Storage-56.199-releases</name>
            <url>http://dev3.me.zing.vn/artifactory/libs-server-local</url>
        </repository>
    </distributionManagement>
</project>
